<%- include('partials/header'); -%>
<%- include('partials/modal'); -%>



<div id="game">
    <div class="row" id="topBar">
        <div class="col-xs-1 ressources">
            <div id="Res-Iron" class="iron"></div>
        </div>
        <div class="col-xs-1 ressources">
            <div id="Res-Elec" class="elec"></div>
        </div>
        <div class="col-xs-1 ressources">
            <div id="Res-Money" class="money"></div>
        </div>
        <div class="col-xs-1 ressources">
            <div id="Res-PV" class="money"></div>
        </div>
        <div class="col-xs-1 ressources">
            <div class="btn" id="startTurn">Start</div>
        </div>
        <div class="col-xs-1 ressources">
            <div class="btn" id="sendOrder">Send</div>
        </div>
        <div class="col-xs ressources">

            <div id="barTimer">
                <div id="Timer">
                </div>
            </div>
        </div>


    </div>
    <div id="board">
        <canvas id="Map" width="100%" height="100%"></canvas>
    </div>
    <div id="planetInfo">
        <h3 id="infoName"></h3>
        <div id="infoPosition"></div>
        <div id="infoSize"></div>
        <div id="ressource">
            <div class="row">
                <div class="col-xs-3 value">
                    <div class="icon iron"></div>
                    <div id="value-Fer">0</div>
                </div>
                <div class="col-xs-3 value">
                    <div class="icon elec"></div>
                    <div id="value-Elec">0</div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-3 value">
                    <div class="icon money"></div>
                    <div id="value-Money">0</div>
                </div>
            </div>
        </div>
        <div id="construct" class="row">

        </div>
        <div id="tooltipBatiment" class="neutre">
            <div id="info">
                <h3 id="nameBatiment">Construction</h3>
                <div class="row">
                    <div class="col-xs-11" id="descBatiment">
                        Passe ta souri sur un batiment pour en savoir plus
                    </div>
                </div>

                <div id="prize">
                    <div class="row">
                        <div class="col-xs">
                            <h3>Prix : </h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-5"></div>
                        <div class="col-xs" id="prize-iron"></div>
                        <div class="col-xs-1"></div>
                    </div>
                    <div class="row">
                        <div class="col-xs-5"></div>
                        <div class="col-xs" id="prize-elec"></div>
                        <div class="col-xs-1"></div>
                    </div>
                    <div class="row">
                        <div class="col-xs-5"></div>
                        <div class="col-xs" id="prize-money"></div>
                        <div class="col-xs-1"></div>
                    </div>
                </div>
                <div id="actionAttack">
                    <div class="row">
                        <div class="col-xs">
                            <h3>Attaque : </h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-5"></div>
                        <div class="col-xs" id="prize-attack"></div>
                        <div class="col-xs-1"></div>
                    </div>
                </div>
            </div>
            <div id="icon"></div>
        </div>
    </div>
    <div id="magic">
        <div id="deathRay" class="round">
            <div class="nb">
            </div>
        </div>
        <div id="batiments">
            <div id="attack" class="round">
                <div class="nb">
                </div>
            </div>
            <div id="explo" class="round">
                <div class="nb">
                </div>
            </div>
            <div id="commerce" class="round">
                <div class="nb">
                </div>
            </div>
            <div id="megapole" class="round">
                <div class="nb">
                </div>
            </div>
        </div>
    </div>
    <div id="order">
        <div class="header">
            Ordres
        </div>
        <div class="content">
            <div class="row">
                <div class="col-xs-10"><input type="text" id="order-1" class="order"></div>
                <div class="col-xs">
                    <div class="btn" onclick="deleteOrder(1)">X</div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-10"><input type="text" id="order-2" class="order"></div>
                <div class="col-xs">
                    <div class="btn" onclick="deleteOrder(2)">X</div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-10"><input type="text" id="order-3" class="order"></div>
                <div class="col-xs">
                    <div class="btn" onclick="deleteOrder(3)">X</div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-10"><input type="text" id="order-4" class="order"></div>
                <div class="col-xs">
                    <div class="btn" onclick="deleteOrder(4)">X</div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-10"><input type="text" id="order-5" class="order"></div>
                <div class="col-xs">
                    <div class="btn" onclick="deleteOrder(5)">X</div>
                </div>
            </div>

        </div>


    </div>

</div>
